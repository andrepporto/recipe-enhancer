generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  recipes   Recipe[]
}

model Recipe {
  id          String   @id @default(cuid())
  title       String
  ingredients String[]
  steps       String[]
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}
